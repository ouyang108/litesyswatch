{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "litesyswatch",
  "version": "0.1.0",
  "identifier": "com.cc.litesyswatch",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
 
  "app": {
    "windows": [
      {
        "title": "litesyswatch",
        "url": "/",
        "label": "main",
        "width": 800,
        "height": 690,
        "minWidth":800,
        "minHeight":690,
        "resizable": true ,
        "backgroundColor":"#fff"
        
      },
      {
      "label": "float",
      "url": "#/desktop",  
      "width": 120,
      "height": 62,
      "decorations": false,
      "maximizable": false,
      "alwaysOnTop": true,
      "visible": false, 
      "skipTaskbar": true,
      "resizable": false,
      "shadow":false,
      "transparent": true
    }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
